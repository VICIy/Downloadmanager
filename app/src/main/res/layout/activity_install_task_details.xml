<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

    <include
        android:id="@+id/base_top_bar"
        layout="@layout/base_titlebar"/>

    <ScrollView
        android:id="@+id/sv_service_details11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/base_top_bar"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_134"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_100"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/default_margin_15"
                    android:background="@mipmap/ic_launcher"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/default_margin_15"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="野草应用"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_16"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_margin_11"
                        android:text="仅剩10份 | 预计收益 ￥1.00"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/text_size_14"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_margin_8"
                        android:text="37.5M | 总投放量1000份"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/text_size_14"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_margin_8">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_launcher"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/default_margin_4"
                            android:text="安全 官方"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_margin_1"
                android:background="@color/color_dddddd"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin_15"
                    android:layout_marginTop="@dimen/default_margin_15"
                    android:text="任务说明"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_16"/>

                <ListView
                    android:id="@+id/lv_timeline"
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:layout_marginTop="@dimen/default_margin_20"
                    android:scrollbars="none"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin_15"
                    android:layout_marginRight="@dimen/default_margin_15"
                    android:layout_marginTop="@dimen/dp_25"
                    android:text="备注：任务未完成前，请勿卸载软件，否则视为自动放弃任务"
                    android:textColor="@color/textcolor2_666666"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_margin_1"
                android:layout_marginTop="@dimen/default_margin_15"
                android:background="@color/color_dddddd"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin_15"
                    android:layout_marginTop="@dimen/default_margin_15"
                    android:text="应用介绍"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_16"/>

                <RelativeLayout
                    android:id="@+id/rl_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/vp_app_details_img"
                        android:layout_width="196dp"
                        android:layout_height="348dp"
                        android:layout_marginLeft="@dimen/default_margin_15"
                        android:layout_marginRight="@dimen/default_margin_15"
                        android:layout_marginTop="@dimen/default_margin_15"
                        android:clipChildren="false"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_60"
                    android:layout_marginLeft="@dimen/default_margin_15"
                    android:layout_marginRight="@dimen/default_margin_15"
                    android:layout_marginTop="@dimen/default_margin_10"
                    android:text="款发动机哦我i发生对抗sad放假哦iwe阿发淑女啊四大佛教哦爱未发生的风阿斯蒂芬就owe恰发生的看法阿萨德激发法律界阿萨德多萨夫教子vnzxveoivdzkvnzxasdfjoiewa 多萨科洛夫vaszasdjfasl拉萨分钟vmzxvqaivanzx子线程vckoeplkz来自埋藏在心，没看到岁的老父卡死菲拉斯拉斯的访客哦我怎么做"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <!--这个按钮可以有三种状态 正在下载中，查看奖励，重新下载-->
        <Button
            android:id="@+id/btn_install_task_status"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/install_button_background"
            android:gravity="center"
            android:text="查看奖励￥7.00"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:visibility="visible"/>
    </LinearLayout>

</RelativeLayout>